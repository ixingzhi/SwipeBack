<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base_bg6"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.xingzhi.android.swipeback.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tbBackVisibility="gone"
        app:tbBackgroundColor="@color/color_base_bg6"
        app:tbDividerVisibility="gone"
        app:tbTitleText="@string/label_today_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@color/color_base_bg3"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mTvDemoOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_46"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/ic_arrow_right_gray"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16"
            android:text="@string/text_demo_one_description"
            android:textColor="@color/color_base_text1"
            android:textSize="@dimen/text_size_15" />

        <include
            layout="@layout/layout_divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_height"
            android:layout_marginStart="@dimen/margin_16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mTvDemoTwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_46"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/ic_arrow_right_gray"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16"
            android:text="@string/text_demo_two_description"
            android:textColor="@color/color_base_text1"
            android:textSize="@dimen/text_size_15" />

        <include
            layout="@layout/layout_divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_height"
            android:layout_marginStart="@dimen/margin_16" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/mTvDemoThree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_46"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/ic_arrow_right_gray"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_16"
            android:paddingEnd="@dimen/padding_16"
            android:text="@string/text_demo_three_description"
            android:textColor="@color/color_base_text1"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

</LinearLayout>