<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mIvBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_demo_three_background"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xingzhi.android.swipeback.widget.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:tbBackgroundColor="@color/color_00000000_transparent"
        app:tbTitleText="@string/label_demo_three"
        app:tbTitleTextColor="@color/color_base_text1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:text="@string/text_demo_three_description"
        android:textColor="@color/color_base_text2"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintTop_toBottomOf="@+id/mIvBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>