<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xingzhi.android.swipeback.widget.TitleBar
        android:id="@+id/mTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:tbBackgroundColor="@color/color_base_bg3"
        app:tbTitleText="@string/label_demo_one" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
        android:text="@string/text_demo_one_description"
        android:textColor="@color/color_base_text2"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintTop_toBottomOf="@+id/mTitleBar" />

</androidx.constraintlayout.widget.ConstraintLayout>